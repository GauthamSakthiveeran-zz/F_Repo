
<suite name="Playback Web Regression Suite" verbose="1">
    <listeners>
        <listener class-name="com.ooyala.facile.listners.FacileTestListener" />
    </listeners>

    <test name="Playback Web Regression Group">
        <groups>
            <define name="regression">
                <include name="Player" />
                <include name="Discovery" />
                <include name="SyndicationRules" />
                <include name="Playback" />
                <include name="AspectRatio" />
                <include name="ABR" />
                <include name="closedCaption" />
            </define>
            <run>
                <include name="regression" />
            </run>
        </groups>
        <classes>
            <class name="com.ooyala.playback.alice.BasicPlaybackTests" />
            <class name="com.ooyala.playback.alice.DiscoveryUpNextTests" />
            <class name="com.ooyala.playback.alice.PlaybackControlsLiveDVRTests" />
            <class name="com.ooyala.playback.alice.PlaybackHLSVodTests" />
            <class name="com.ooyala.playback.alice.PlaybackLiveTests" />
            <class name="com.ooyala.playback.alice.PlaybackReplayVideoTests" />
            <class name="com.ooyala.playback.alice.PlaybackFullScreenTests" />
            <class name="com.ooyala.playback.alice.PlaybackLocalizationTests" />
            <class name="com.ooyala.playback.alice.PlayerMetadataStatesTests" />
            <class name="com.ooyala.playback.alice.PlaybackDiscoveryCustomizationTests" />
            <class name="com.ooyala.playback.alice.PlaybackClosedCaptionTests" />
            <class name="com.ooyala.playback.alice.PlaybackAspectRatioTests" />
            <class name="com.ooyala.playback.alice.PlaybackVerticalVideoTests" />
            <!--<class name="com.ooyala.playback.alice.PlaybackDiscoveryTests" />
                <class name="com.ooyala.playback.alice.PlaybackVolumeTest" />
                 <class name="com.ooyala.playback.alice.PlaybackWatermarkTests" />-->
        </classes>
    </test>
</suite>