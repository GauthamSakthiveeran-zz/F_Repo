<suite name="Playback Web Regression Suite" verbose="1">
    <listeners>
        <listener class-name="com.ooyala.facile.listners.FacileTestListener" />
    </listeners>
    <test name="Streams Regression" parallel="classes" thread-count="1">
        <classes>
            <parameter name="testData" value="alice/Streams.xml" />
            <parameter name="jsFile" value="alice/alice.js" />
            <class name="com.ooyala.playback.streams.BasicPlaybackTests" />
        </classes>
    </test>
    
    <test name="DRMRegression" parallel="classes" thread-count="2">
        <classes>
            <parameter name="testData" value="alice/DRM.xml"/>
            <parameter name="jsFile" value="alice/alice.js"/>
            <class name ="com.ooyala.playback.drm.PlaybackDRMTests"/>
            <class name="com.ooyala.playback.drm.PlaybackWithoutDRMValidationsTests"/>
        </classes>
    </test>
    
    <test name="AMF" parallel="classes" thread-count="10">
        <parameter name="jsFile" value="common.js,amf/amf.js"/>
        <parameter name="xmlFilePkg" value="amf"/>
        <classes>
            <class name="com.ooyala.playback.amf.preroll.PlaybackPreRollAdsClickThroughClosedCaptionTests"></class>
            <class name="com.ooyala.playback.amf.midroll.PlaybackMidRollAdsTests"></class>
			<class name="com.ooyala.playback.amf.postroll.PlaybackPostRollAdsTests"></class>
        </classes>
    </test>
    
    <test name="Player Features" parallel="classes" thread-count="10">
        <classes>
            <parameter name="testData" value="alice/Alice.xml" />
            <parameter name="jsFile" value="alice/alice.js" />
            <class name="com.ooyala.playback.playerfeatures.PlaybackFullScreenTests" />
            <class name="com.ooyala.playback.playerfeatures.PlaybackClosedCaptionTests" />
            <class name="com.ooyala.playback.playerfeatures.PlaybackDiscoveryTests" />
        </classes>
    </test>

    <test name="HTML5 Playback first Regression" parallel="false" thread-count="1">
        <classes>
            <parameter name="testData" value="alice/HTML5FirstPlaybackTests.xml" />
            <parameter name="jsFile" value="alice/alice.js" />
            <class name="com.ooyala.playback.core.HTML5FirstPlaybackTests"/>
        </classes>
    </test>
    
    <test name="EncodingPriority" parallel="classes" thread-count="1">
        <classes>
            <parameter name="testData" value="encodingPriority/encodingPriority.xml"/>
            <parameter name="jsFile" value="common.js,alice/alice.js"/>
            <class name ="com.ooyala.playback.encodingpriority.PlaybackEncodingPriorityTests"/>
        </classes>
    </test>
</suite>

