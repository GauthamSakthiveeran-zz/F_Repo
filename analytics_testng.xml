<suite name="Playback Web Analytics Suite" verbose="1">
    <listeners>
        <listener class-name="com.ooyala.facile.listners.FacileTestListener" />
    </listeners>

    <test name="Analytics basic tests" parallel="classes" thread-count="1">
        <classes>
        <parameter name="testData" value="analytics/Analytics.xml" />
        <parameter name="jsFile" value="alice/alice.js" />
            <class name="com.ooyala.playback.analytics.AnalyticsBasicTests"/>
            <class name="com.ooyala.playback.analytics.AnalyticsAutoplayTests"/>
            <class name="com.ooyala.playback.analytics.AnalyticsReplayTests"/>
            <class name="com.ooyala.playback.analytics.AnalyticsPlayerDestroyTests"/>
        </classes>
    </test>

    <test name="Analytics AMF tests" parallel="classes" thread-count="1">
        <classes>
            <parameter name="testData" value="analytics/Analytics.xml" />
            <parameter name="jsFile" value="alice/alice.js,amf/amf.js" />
            <class name="com.ooyala.playback.analytics.AnalyticsPrerollAdsTests"/>
            <class name="com.ooyala.playback.analytics.AnalyticsSkipAdsTests"/>
            <class name="com.ooyala.playback.analytics.AnalyticsPrerollAdsClickthroughTests"/>
        </classes>
    </test>

</suite>