<suite name="Player skin tests" verbose="1">
    <listeners>
        <listener class-name="com.ooyala.facile.listners.FacileTestListener" />
    </listeners>
    <test name="Player skin tests for controlbar buttons" parallel="classes" thread-count="1">
        <classes>
            <parameter name="testData" value="playerskin/Skin.xml" />
            <parameter name="jsFile" value="alice/alice.js"/>
            <class name="com.ooyala.playback.playerskin.PlayerSkinControlbar" />
        </classes> 
    </test> 
    
    <test name="Player skin tests for buttons in more options" parallel="classes" thread-count="1">
        <classes>
            <parameter name="testData" value="playerskin/Skin.xml" />
            <parameter name="jsFile" value="alice/alice.js"/>
            <class name="com.ooyala.playback.playerskin.PlayerSkinMoreOptions" />
        </classes>
    </test>   
    
     <test name="Player skin tests for discovery button" parallel="classes" thread-count="1">
        <classes>
